<Page x:Class="PointOfSale.Entree_Customization_Pages.CustomizeBrontowurst"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale.Entree_Customization_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeBrontowurst">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Hold Bun"
                Click="SelectHoldBun"
                Grid.Column="0"/>
        <Button Content="Hold Peppers"
                Click="SelectHoldPeppers"
                Grid.Column="1"/>
        <Button Content="Hold Onions"
                Click="SelectHoldOnions"
                Grid.Column="2"/>
        <Button Content="Done"
                Click="SelectDone"
                Grid.Row="2"
                Grid.Column="2"/>
    </Grid>
</Page>
