<Page x:Class="PointOfSale.DrinkSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="390" d:DesignWidth="592"
      Title="DrinkSelection">

    <WrapPanel>
        <StackPanel>
            <Button Click="SelectSodasaurusDrink">
                <StackPanel>
                    <Image Width="50"  Source="Assets/DinoDiner-13.png"/>
                    <TextBlock>Jurassic Java</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="SelectMeteorMacAndCheeseSide">
                <StackPanel>
                    <Image Width="50"  Source="Assets/DinoDiner-09.png"/>
                    <TextBlock>J</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="SelectMezzorellaSticksSide">
                <StackPanel>
                    <Image Width="50"  Source="Assets/DinoDiner-10.png"/>
                    <TextBlock>Mezzorella Sticks Side</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="SelectTriceritotsSide">
                <StackPanel>
                    <Image Width="50"  Source="Assets/DinoDiner-11.png"/>
                    <TextBlock>Triceritots Side</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <StackPanel>
            <Button Click="SelectTriceritotsSide">
                <StackPanel>
                    <Image Width="50"  Source="Assets/DinoDiner-11.png"/>
                    <TextBlock>Triceritots Side</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </WrapPanel>
</Page>
